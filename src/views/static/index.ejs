<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head.ejs %>>
</head>
<body>
    <% include ./partials/navbar.ejs %>

    <main class="container">
        <header class="jumbotron my-4">
            <h1 class="display-3">TV Movie Center</h1>
            <p class="lead">A webapp for discovering movies and TV</p>
        </header>

        <section>
            <h2 class="display-4">Popular TV Shows</h2>
            <ul>
                <% shows.forEach(show => { %>
                    <li><%= show.name %></li>
                <% }) %>
            </ul>
        </section>
    </main>

    <% include ./partials/baseScripts.ejs %>
</body>
</html>